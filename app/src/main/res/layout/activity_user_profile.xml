<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bgHeader"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:contentDescription="header"
            android:scaleType="fitXY"
            android:src="@drawable/background_board"
            />
        <ImageView
            android:id="@+id/bgHeader2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="header"
            android:layout_centerHorizontal="true"

            android:scaleType="fitXY"
            android:src="@drawable/regoli"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="10dp"
            />
        <ImageButton
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="header"

            android:scaleType="fitXY"
            android:src="@drawable/backk"
            android:background="@drawable/profileback"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:id="@+id/small2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="header"
            android:layout_toLeftOf="@+id/bgHeader"
            android:src="@drawable/regoli"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="200dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-90dp"
        android:layout_marginHorizontal="10dp"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/inner1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/uname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chandresh Mendapara"
                    android:textSize="30dp"
                    android:fontFamily="@font/baloo"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorPrimary"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/inner2"
                android:layout_below="@+id/inner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Personal"
                    android:textSize="28dp"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/cantora_one"
                    android:textColor="@color/colorPrimary"
                    />
                <View
                    android:id="@+id/v1"
                    android:layout_below="@+id/p"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/h"
                    android:layout_toRightOf="@+id/p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Health"
                    android:textSize="28dp"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/cantora_one"
                    android:textColor="@color/colorPrimary"
                    android:alpha="0.5"
                    />
                <View
                    android:id="@+id/v2"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimary"
                    android:layout_toRightOf="@+id/p"
                    android:layout_below="@+id/h"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginLeft="100dp"

                    />


            </RelativeLayout>
                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:id="@+id/c_profile"
                    android:layout_below="@+id/inner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Phone"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7990927021"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abcd@gmail.com"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">
                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:text="DOB"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10-02-2000"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/c_health"
                    android:visibility="gone"
                    android:layout_below="@+id/inner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="30dp"
                    app:cardCornerRadius="20dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Blood Group"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7990927021"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="abcd@gmail.com"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp"
                            >
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Gender"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Male"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="10dp">
                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="DOB"
                                android:textSize="20dp"
                                android:fontFamily="@font/cantora_one"
                                android:textColor="@color/colorPrimary"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10-02-2000"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:fontFamily="@font/cantora_one"
                                android:alpha="0.8"
                                />
                        </LinearLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
</LinearLayout>